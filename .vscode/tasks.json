    "version": "2.0.0",
    "tasks": [
        {
            "label": "render Escena",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "manim",
                "-ql",
                "${fileBasename}",
                "Escena"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}